<!DOCTYPE html>
<html lang="en">

<%- include('partials/head', { title, description }); %>

   <body>
      <section id="container">
         <div class="pump"><img src="/images/pump.png" alt="fuel pump"></div>
         <div class="login">
            <div class="error">
               <% if(errors !="" ) { %>
                  <% errors.forEach((item)=> { %>
                     <span class="alert-danger">
                        <%- item %>
                     </span>
                     <% }); %>
                        <% } %>

                           <% if(success !="" ) { %>
                              <% success.forEach((item)=> { %>
                                 <span class="alert-success">
                                    <%- item %>
                                 </span>
                                 <% }); %>
                                    <% } %>
            </div>
            <div class="content">
               <h2>Sign in</h2>
               <form method="post" action="/user/signin">
                  <label for="email"
                     style="padding: 0px !important; display: block !important; width: 85%; margin: auto; text-align: left; font-size: .9rem; color: #05b3a0;">Email</label>
                  <input type="email" id="email" name="email" placeholder="Email">
                  <label for="password"
                     style="padding: 0px !important; display: block !important; width: 85%; margin: auto; text-align: left; font-size: .9rem; color: #05b3a0;">Password</label>
                  <input type="password" id="password" name="password" placeholder="Password">
                  <input type="submit" value="Sign in" class="btn-login">
                  <p>Not signed-up <a href="/user/signup" target="blank">signup</a> here.</p>
               </form>
            </div>
         </div>
      </section>
      <script src="/js/signin.js">
      </script>
   </body>

</html>